# General
default_border pixel 4
default_floating_border pixel 4
gaps inner 8
smart_gaps on
smart_borders on
focus_follows_mouse no

# Window rules
# Firefox
for_window [app_id="firefox"] inhibit_idle fullscreen

# Pop up windows
for_window [title="Discord Updater"] floating enable
for_window [title="Open Folder"] floating enable

# GTK theme settings
for_window [class="Lxappearance"] floating enable, resize set width 800 height 600

# Lutris
for_window [app_id="lutris"] floating enable

# Pavucontrol
for_window [app_id="pavucontrol"] floating enable

# File Manager
for_window [app_id="nemo"] floating enable 

# File Roller
for_window [app_id="file-roller"] floating enable

# Steam 
for_window [class="Steam"] floating enable

# default floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [instance="update_installer"] floating enable

# Assign workspaces
assign [app_id="firefox"] workspace number 1
assign [class="ZapZap"] workspace number 3
assign [class="discord"] workspace number 3
assign [app_id="thunderbird"] workspace number 3
assign [app_id="mpv"] workspace number 4
assign [class="Steam"] workspace number 5 

